<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PE Tracker</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="..\CSS\style.css">
  <style>
    body {
      width: 19.5rem;
    }
    .header-observer {
      text-align: center;
    }
    .main-content {
      margin: auto 0;
      width: 18.5rem;
      /* border: 1px solid red; */
    }
    .headers-tasks {
      width: 18.5rem;
      position: relative;
      text-align: right;
    }
    #time-header, #quantity-header, .task-time, .task-quantity {
      margin: auto .3rem;
      padding: 1px 5px;
    }
    .task-title {
      margin-right: 2em;
      font-size: large;
      text-align: justify;
    }
    .task-control {
      margin: auto 7px;
      float: right;
    }
    .task-time, .task-quantity {
      background-color: rgb(211, 210, 210);
    }
    .task-time {
      border: none;
      text-align: right;
      font-size: .96em;
      float: right;
    }
    .task-quantity {
      float: right;
      border: none;
      padding: 1px 5px;
    }
    #buttons-section {
      text-align: center;
      margin: .7rem;
    }
    #buttons-section button {
      margin: .2rem;
    }
  </style>
</head>
<body>
  <header class="header-observer">
    <h1>PE Tracker</h1>
    <h2>Observer Geraldo</h2>
    <p>Teacher-Student Instructor: <span id="instructors-name"></span></p>
    <p>School: <span id="school-name"></span></p>
    <p>Date: <span id="date"></span><input type="date" name="input-date" id="input-date" value="<%= new Date()%>"></p>
  </header>

  <main class="main-content">
    
    <div class="tasks-table">
      <p class="headers-tasks"><span id="time-header">Time*</span><span id="quantity-header">#</span></p>
      <% tasks.forEach(function(r) { %>
        <div id="r.id-parameters"><span class="task-title" id="<%= r.id %>-title"><%= r.name %></span><span class="task-quantity" id="<%= r.id %>-quantity">0</span><input class="task-time" id="<%= r.id %>-time" value="0" size="2"></input><span class="task-control" id="<%= r.id %>-control"><i class="fa fa-play"></i></span></div>
        <!-- <button id='<%= r.id %>' onClick='javascript:logTask(<%= r.id %>);'><%= r.name %></button> -->
      <% }); %>
    </div>
    <div id="buttons-section">
      <button id="btn-reset">Reset</button><br>
      <button id="btn-save">Save Data</button><button id="btn-report">Generate Report</button>
    </div>
  </main>

  <p><i>*Time the instructor spent for each task.</i></p>
  <script>
    let currentTaskId = null;
    const logTask = async function(id) {
      const response = await fetch('/log', {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          user_id: -1,
          students_id: -1,
          tasks_id: id,
          duration: "'+00:00:01'"
        })
      });
      const result = await response.text();
      console.log(result);
      currentTaskId = id;
    };
  </script>
</body>
</html>