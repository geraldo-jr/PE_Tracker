<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PE Tracker</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <h1>PE Tracker</h1>
  <header class="header-observer">
    <h2>Observer Geraldo</h2>
    <p>Teacher-Student Instructor: <span id="instructors-name"></span></p>
    <p>School: <span id="school-name"></span></p>
    <p>Date: <span id="date"></span></p>
  </header>

  <div class="tasks-table">

    <p><span id="time-header">Times*</span> <span id="tasks-quantity">#</span></p>
    <% tasks.forEach(function(r) { %>
      <div id="r.id-parameters"><span id="<%= r.id %>-title"><%= r.name %></span><span id="<%= r.id %>-control"><i class="fa fa-play"></i></span><span id="<%= r.id %>-time">0</span><span id="<%= r.id %>-quantity">0</span></span></div>
      <!-- <button id='<%= taskId %>' onClick='javascript:logTask(<%= taskId %>);'><%= r.name %></button> -->
    <% }); %>
  </div>
  <script>
    let currentTaskId = null;
    const logTask = async function(id) {
      const response = await fetch('/log', {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          user_id: -1,
          students_id: -1,
          tasks_id: id,
          duration: "'+00:00:01'"
        })
      });
      const result = await response.text();
      console.log(result);
      currentTaskId = id;
    };
  </script>
</body>
</html>